---
import Layout from "../layouts/Layout.astro";

import Card from "../components/Card.astro";
import Heading from "../components/Heading.astro";
import Infor from "../assets/Infor.png";
import Cynder from "../assets/Cynder.png";
import Creatizens from "../assets/Creatizens.png";
import Pill from "../components/Pill.astro";
import Bentasell from '../assets/Bentasell.png';
import Pixie from '../assets/Pixie.png';
import Ateneo from '../assets/Ateneo.jpg';

//Professional Work Components
import Anaren from "../components/Anaren.astro";
//Project Components
---

<Layout title="Maximo Hizon">
  <div id="contents">
    <main class="container">
      <div>
        <Heading />
        <h2
        class="text-3xl mt-6 font-medium lg:text-4xl tracking-tight text-primary header-text">Skills</h2>
        <div class="pillGroup">
          <Pill codeName="Javascript" />
          <Pill codeName="React" />
          <Pill codeName="Node.js" />
          <Pill codeName="Vue" />
          <Pill codeName="Angular" />
        </div>
      </div>

      <h2
        class="text-3xl mt-6 font-medium lg:text-4xl tracking-tight text-primary header-text mb-2"
      >
        Projects
      </h2>
      <br>
      <div class="mx-auto grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="">
          <Card
            href="anaren"
            title="bentaSell"
            body="An inventory management system (WIP)"
            tags="Drupal, PHP, JavaScript, CSS, HTML"
          >
            <div class="max-w-full image-container">
              <Anaren image={Bentasell.src} />
            </div>
          </Card>
        </div>

        <div class="">
          <Card
            href="anaren"
            title="Pixie Dust Enterprises"
            body="An inventory tracker"
            tags="Drupal, PHP, JavaScript, CSS, HTML"
          >
            <div class="max-w-full image-container">
              <Anaren image={Pixie.src} />
            </div>
          </Card>
        </div>
      </div>

      <div class="block-margin-bottom">
        <h2
          class="text-3xl mt-6 font-medium lg:text-4xl tracking-tight text-primary header-text"
        >
          Experience
        </h2>
        <br>
        <div>
          <div>
            <img src={Creatizens.src} class="work-icon">
            <h3 class="industry mb-2 text-2xl font-bold tracking-tight header-text"> Creatizens Corp: Full Stack Software Developer Apprentice (April '24 - Present)</h3>
          </div>
        </div>
        <br>
        <div>
          <div>
            <img src={Infor.src} class="work-icon">
            <h3 class="industry mb-2 text-2xl font-bold tracking-tight header-text"> Infor: Development and Quality Assurance Intern (August '23 - November '23)</h3>
          </div>
        </div>
        <br>
        <div>
          <div>
            <img src={Cynder.src} class="work-icon">
            <h3 class="industry mb-2 text-2xl font-bold tracking-tight header-text"> Cynder: Web Development Intern (June '22 - August '22)</h3>
          </div>
        </div>
      </div>

      <h2
        class="text-3xl mt-6 font-medium lg:text-4xl tracking-tight text-primary header-text mb-2"
      >
        Education
      </h2>
      <br>
      <div class="block-margin-bottom">
        <img src={Ateneo.src} class="work-icon">
        <h3 class="industry mb-2 text-2xl font-bold tracking-tight header-text"> BS Computer Science</h3>
        <p class="mt-4 text-lg paragraph-text just-text">
          Ateneo de Manila University
        </p>
      </div>
    </main>
  </div>
</Layout>

<style is:global>
  main {
    margin: auto;
    padding: 0.75rem;
    width: 1100px;
    max-width: 100%;
    color: white;
    line-height: 1.6;
  }
  .image-container{
    width: 350px;
    max-height: 175px;
    overflow: hidden;
  }

  .work-icon {
    max-width: 60px;
    max-height: 60px;
  }

  .block-margin-bottom{
    margin-bottom: 45px;
  }
  .paragraph-text{
    color: rgb(69, 122, 184);
   }

   .header-text{
    color: rgb(165, 207, 255);
   }
  .project-image {
    max-width: 100% !important;
    overflow: hidden;
  }
  .project-cards {
  }
  .video-wrapper {
    background: #111111;
    padding: calc(1.5rem - 1px);
    line-height: 1.4;
    border-radius: 8px;
    margin-bottom: 2rem;
  }
  .project-column > div {
    max-width: 100%;
    overflow: hidden;
  }
  .projects-alt > li {
    gap: 1rem !important;
  }
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
    font-size: 2.75rem;
  }
  .instructions {
    margin-bottom: 2rem;
    border: 1px solid rgba(var(--accent-light), 25%);
    background: linear-gradient(
      rgba(var(--accent-dark), 66%),
      rgba(var(--accent-dark), 33%)
    );
    padding: 1.5rem;
    border-radius: 8px;
  }
  .instructions code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }
  .instructions strong {
    color: rgb(var(--accent-light));
  }
  .link-card-grid {
    display: grid;
    gap: 0;
    padding: 0;
  }
  .read-more {
    color: #fff;
  }
  details {
    position: relative;
    top: -1px;
    margin-top: 0;
    margin-bottom: 1rem;
    padding: 1rem;
    border-radius: 0 0 8px 8px;
    max-width: 900px;
  }
  details > div {
    max-width: 830px;
  }

  summary:hover {
    cursor: pointer;
  }

  .pillGroup {
    display: flex;
  }
  .just-text {
    text-align: justify;
  }

  .border-dark-blue{
    border-color: rgb(16, 59, 116);
  }
</style>

<script></script>
